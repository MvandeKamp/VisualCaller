<UserControl x:Class="VisualCaller.UserControls.LogFileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualCaller.UserControls"
             mc:Ignorable="d" Width="113" Height="50.2" MouseDown="UserControl_MouseDown">
    <Grid Margin="0,0,0,-13">
        <Border CornerRadius="5" Background="#FF202225" Margin="4">
            <Grid>
                <TextBlock x:Name="txtFileName" HorizontalAlignment="Left" Height="29" Margin="4,7,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="91" Foreground="White" FontSize="14"/>
                <Border Margin="4,36,87,3" Background="#FF8F1F1F" CornerRadius="5">
                    <TextBlock Text="X" Foreground="White" TextAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
