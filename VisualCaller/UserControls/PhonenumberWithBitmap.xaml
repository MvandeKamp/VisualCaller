<UserControl x:Class="VisualCaller.UserControls.PhonenumberWithBitmap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualCaller.UserControls"
             mc:Ignorable="d" Height="100" Width="500">
    <Grid>
        <Border Background="{DynamicResource UiLightGray}" CornerRadius="15">
            <Grid>
                <TextBlock x:Name="txtPhoneNumber" HorizontalAlignment="Left" Height="19" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Foreground="White" FontSize="14"/>
                <TextBlock x:Name="txtWaitTime" HorizontalAlignment="Left" Height="19" Margin="10,34,0,0" TextWrapping="Wrap" Text="Wartezeit:" VerticalAlignment="Top" Width="100" Foreground="White" FontSize="14"/>
                <TextBlock x:Name="txtCallTime" HorizontalAlignment="Left" Height="19" Margin="10,58,0,0" TextWrapping="Wrap" Text="Sprechzeit:" VerticalAlignment="Top" Width="100" Foreground="White" FontSize="14"/>
                <Image x:Name="bitmapImage" HorizontalAlignment="Left" Height="56" Margin="130,34,0,0" VerticalAlignment="Top" Width="360"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
