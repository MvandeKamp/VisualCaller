<UserControl x:Class="VisualCaller.UserControls.TabControlVisualise"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualCaller.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource UiLightGray}" Margin="0,0,-76,0">
        <ScrollViewer Margin="0,0,670,0" Width="130" HorizontalAlignment="Left">
            <StackPanel x:Name="stackPanelLogFiles" Background="{DynamicResource UiMediumGray}" Width="113" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Logs" VerticalAlignment="Top" Foreground="White" Height="30" Width="114" TextAlignment="Center" Margin="0,5,0,0" FontSize="22" FontWeight="Bold"/>

            </StackPanel>
        </ScrollViewer>
        <TabControl x:Name="tabControlFileTabs" Margin="130,0,0,0" Background="{DynamicResource UiLightGray}">

        </TabControl>
    </Grid>
</UserControl>
